{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "april-fools",
  "version-string": "0.1.0",
  "dependencies": [
    {
      "name": "folly"
    }
  ],
  "features": {
    "tests": {
      "description": "Build tests",
      "dependencies": [
        {
          "name": "gtest"
        },
        {
          "name": "imgui",
          "features": [
            "docking-experimental",
            "freetype"
          ]
        }
      ]
    },
    "macos": {
      "description": "macOS Support",
      "dependencies": [
        {
          "name": "imgui",
          "features": [
            "osx-binding",
            "metal-binding"
          ]
        }
      ]
    },
    "windows": {
      "description": "windows support",
      "dependencies": [
        {
          "name": "imgui",
          "features": [
            "win32-binding",
            "dx12-binding"
          ]
        }
      ]
    }
  }
}
